{
    "name": "samlev/tallboy",
    "description": "A drawer full of with Blade components built with Tailwind, AlpineJS, Laravel, and Livewire.",
    "type": "library",
    "require": {
        "php": "^8.2",
        "livewire/livewire": "^3.5",
        "illuminate/view": "^10.0|^11.0",
        "illuminate/support": "^10.0|^11.0"
    },
    "require-dev": {
        "laravel/framework": "^10.15.0|^11.0",
        "orchestra/testbench": "^8.21.0|^9.0",
        "orchestra/testbench-dusk": "^8.24|^9.1",
        "pestphp/pest": "^2.0",
        "mockery/mockery": "^1.3.1",
        "laravel/pint": "^1.0",
        "larastan/larastan": "^2.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "Tallboy\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "vendor/orchestra/testbench-core/laravel/app",
            "Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Samuel Levy",
            "email": "sam@determineddevelopment.com"
        }
    ],
    "scripts": {
        "test:lint": [
            "pint --test",
            "phpcs src/"
        ],
        "lint:fix": [
            "pint",
            "phpcbf src/",
            "@test:lint"
        ],
        "test:types": "phpstan analyse",
        "test:unit": "pest",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:unit"
        ],
        "post-autoload-dump": [
            "@clear",
            "@prepare",
            "@dusk:install-chromedriver"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "dusk:install-chromedriver": "@php vendor/bin/dusk-updater detect --auto-update --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench-dusk serve"
        ],
        "lint": [
            "@php vendor/bin/pint",
            "@php vendor/bin/phpstan analyse"
        ]
    },
    "minimum-stability": "dev",
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}