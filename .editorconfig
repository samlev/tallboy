root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml,neon}]
indent_size = 2

[*.json]
indent_size = 2
insert_final_newline = false

[*.blade.php]
indent_size = 2
insert_final_newline = false

[*.{js,css}]
indent_size = 2

[composer.json]
indent_size = 4
